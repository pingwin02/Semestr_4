<Window x:Class="Lab2.CreateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="CreateDialog" Height="325" Width="325">
    <Grid>
        <Label Margin="20,30,230,230">Name:</Label>
        <TextBox x:Name="fileName" Margin="80,30,20,230"/>
        <RadioButton x:Name="isFile" Margin="80,100,150,170" IsChecked="True">File</RadioButton>
        <RadioButton x:Name="isDirectory" Margin="120,100,100,170">Directory</RadioButton>
        <CheckBox x:Name="isReadOnly" Margin="80,140,140,130">ReadOnly</CheckBox>
        <CheckBox x:Name="isArchive" Margin="80,160,150,110">Archive</CheckBox>
        <CheckBox x:Name="isHidden" Margin="80,180,150,90">Hidden</CheckBox>
        <CheckBox x:Name="isSystem" Margin="80,200,150,70">System</CheckBox>
        <Button x:Name="buttonOK" Margin="80,250,150,10" Click="OK">Ok</Button>
        <Button x:Name="buttonCancel" Margin="160,250,70,10" RenderTransformOrigin="-0.947,-5.032" Click="Cancel">Cancel</Button>
    </Grid>
</Window>

<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Height="40" Width="70" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Open" Click="Open"/>
                    <MenuItem Header="Exit" Click="Close"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView x:Name="tree" Margin="0,40,400,20"/>
        <ScrollViewer Margin="405,40,0,20" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="viewer"/>
        </ScrollViewer>
        <StatusBar VerticalAlignment="Bottom" Height="20">
            <TextBlock x:Name="status"/>
        </StatusBar>
    </Grid>
</Window>
